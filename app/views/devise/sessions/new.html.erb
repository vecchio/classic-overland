          <!--
          < % if devise_mapping.rememberable? -%>-->
            <!--<div class="field">-->
            <!--< %= f.check_box :remember_me %>-->
            <!--< %= f.label :remember_me %>-->
            <!--</div>-->
            <!--
          < % end -%>-->
          <!---->
          <!--<div class="actions">-->
          <%= f.submit "Log in" %>
          <!--</div>-->
      <% end %>
      <!---->
      <!--< % = render "devise/shared/links" %>-->
    </div>
    <div class="col-md-3"></div>
  </div>
</div>